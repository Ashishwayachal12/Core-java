package com.oops;

public class Bike {
	String brand;
	int cc;
	double mile;

	public Bike(String brand, int cc, double mile) {
		this.brand = brand;
		this.cc = cc;
		this.mile = mile;
	}

	public Bike(int cc, String brand, double mile) {
		this.brand = brand;
		this.cc = cc;
		this.mile = mile;
	}

	public Bike(double mile, String brand, int cc) {
		this.brand = brand;
		this.cc = cc;
		this.mile = mile;
	}

	public static void main(String[] args) {
		Bike b = new Bike(23.5, "xl", 120);
		details(b);
		Bike b1 = new Bike("xyz", 200, 27.3);
		details(b1);
	}

	private static void details(Bike b) {
		System.out.println("brand is:" + b.brand);
		System.out.println("cc is:" + b.cc);
		System.out.println("mile is:" + b.mile);
		System.out.println("----------------");

	}

}
